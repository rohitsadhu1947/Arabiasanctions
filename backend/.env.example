# Application
APP_NAME=Screening Engine
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/screening_engine

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Screening Settings
DEFAULT_MATCH_THRESHOLD=0.75
HIGH_RISK_THRESHOLD=0.90
MAX_BULK_SCREENING_SIZE=1000

# Sanction List Sources (Optional)
REFINITIV_API_KEY=
OFAC_UPDATE_URL=https://www.treasury.gov/ofac/downloads/sdn.xml
UN_SANCTIONS_URL=https://scsanctions.un.org/resources/xml/en/consolidated.xml

# Workflow
DEFAULT_ESCALATION_TIMEOUT_HOURS=24
MAX_APPROVAL_CYCLES=3

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

